# Environment Configuration for TicketBox Frontend
# Copy this file to .env and fill in your actual values

# API Configuration
EXPO_PUBLIC_API_URL=http://localhost:3000/api

# Supabase Configuration
EXPO_PUBLIC_SUPABASE_URL=your-supabase-project-url
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# Blockchain Configuration
EXPO_PUBLIC_RPC_URL=http://localhost:8545
EXPO_PUBLIC_CHAIN_ID=1337
EXPO_PUBLIC_CHAIN_NAME=Localhost

# Contract Addresses (from deployments.json)
EXPO_PUBLIC_SYSTEM_TOKEN_ADDRESS=
EXPO_PUBLIC_TICKET_NFT_ADDRESS=
EXPO_PUBLIC_MARKETPLACE_ADDRESS=

# WalletConnect Project ID (get from https://cloud.walletconnect.com)
EXPO_PUBLIC_WALLETCONNECT_PROJECT_ID=

# Optional: Block Explorer
EXPO_PUBLIC_BLOCK_EXPLORER=

# Optional: Analytics
EXPO_PUBLIC_ANALYTICS_ID=
EXPO_PUBLIC_SENTRY_DSN=
